{
    "name": "@okikio/native",
    "version": "0.0.7",
    "description": "A framework who's goal is to make it easier to create complex, performant, light-weight, web applications using native js apis.",
    "publishConfig": {
        "access": "public",
        "main": "lib/api.js",
        "types": "lib/src/api.d.ts",
        "umd:main": "lib/api.umd.js",
        "browser": "lib/api.umd.js",
        "unpkg": "lib/api.umd.js",
        "module": "lib/api.mjs"
    },
    "umd:name": "native",
    "main": "src/api.ts",
    "source": "src/api.ts",
    "output": [
        {
            "file": "lib/api.mjs",
            "format": "es"
        },
        {
            "file": "lib/api.umd.js",
            "format": "umd"
        },
        {
            "file": "lib/api.js",
            "format": "iife"
        }
    ],
    "files": [
        "lib",
        "src"
    ],
    "scripts": {
        "build": "rollup --config",
        "watch": "rollup --config --watch",
        "test": "jest --maxWorkers=3 --coverage",
        "test:watch": "jest --maxWorkers=3 --watch --verbose false",
        "pre-release": "ultra build && ultra docs:build && ultra test",
        "docs:build": "gulp build",
        "docs:watch": "gulp"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/okikio/native.git"
    },
    "keywords": [
        "api",
        "js",
        "native",
        "framework",
        "web",
        "pjax"
    ],
    "author": {
        "name": "Okiki Ojo",
        "email": "hey@okikio.dev",
        "url": "https://okikio.dev"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/okikio/native/issues"
    },
    "homepage": "https://github.com/okikio/native#readme",
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^9.0.0",
        "@types/jest": "^26.0.14",
        "browser-sync": "^2.26.12",
        "eslint": "^7.11.0",
        "gulp": "^4.0.2",
        "gulp-postcss": "^8.0.0",
        "gulp-sass": "^4.1.0",
        "gulp-swig": "^0.9.1",
        "jest": "^26.5.2",
        "jest-chain": "^1.1.5",
        "jest-environment-jsdom-global": "^2.0.4",
        "jest-watch-lerna-packages": "^1.1.0",
        "merge-stream": "^2.0.0",
        "rollup": "^2.29.0",
        "rollup-plugin-esbuild": "^2.5.2",
        "rollup-plugin-typescript2": "^0.27.3",
        "ts-jest": "^26.4.1",
        "tslib": "^2.0.3",
        "typescript": "^4.0.3",
        "ultra-runner": "^3.5.0"
    },
    "dependencies": {
        "@okikio/animate": "workspace:^0.0.7",
        "@okikio/emitter": "workspace:^0.0.7",
        "@okikio/manager": "workspace:^0.0.7"
    },
    "gitHead": "ad422076cdb57d570426f786886129d5bca2f90f"
}
