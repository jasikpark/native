{
    "name": "@okikio/native",
    "version": "1.2.0",
    "description": "A framework who's goal is to make it easier to create complex, light-weight, and performant web applications using modern js apis.",
    "publishConfig": {
        "access": "public",
        "main": "lib/api.cjs.js",
        "types": "@types/api.d.ts"
    },
    "main": "src/api.ts",
    "browser": "lib/api.es.js",
    "module": "lib/api.es.js",
    "exports": {
        ".": {
            "require": "./lib/api.cjs.js",
            "import": "./lib/api.es.js",
            "default": "./lib/api.es.js"
        },
        "./src/*": "./src/*.ts",
        "./lib/*": "./lib/*.js",
        "./ts": "./src/api.ts",
        "./es": "./lib/api.es.js",
        "./cjs": "./lib/api.cjs.js",
        "./iife": "./lib/api.js"
    },
    "source": "src/api.ts",
    "directories": {
        "lib": "./lib"
    },
    "files": [
        "lib",
        "src",
        "@types"
    ],
    "scripts": {
        "build": "node ./build",
        "watch": "node ./build --watch",
        "dts": "tsc --project dts.tsconfig.json",
        "pre-release": "npm run build && npm run dts",
        "changelog": "standard-version --releaseCommitMessageFormat --tag-prefix \"@okikio/native@\" \"chore(release): @okikio/native@{{currentTag}}\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/okikio/native.git"
    },
    "keywords": [
        "api",
        "ts",
        "native",
        "modern",
        "framework",
        "web",
        "pjax"
    ],
    "author": {
        "name": "Okiki Ojo",
        "email": "hey@okikio.dev",
        "url": "https://okikio.dev"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/okikio/native/issues"
    },
    "homepage": "https://github.com/okikio/native/packages/native#readme",
    "dependencies": {
        "@okikio/animate": "workspace:*",
        "@okikio/emitter": "workspace:*",
        "@okikio/manager": "workspace:*",
        "esbuild": "^0.8.27",
        "gzip-size": "^6.0.0",
        "pretty-bytes": "^5.5.0",
        "standard-version": "^9.1.0",
        "typescript": "^4.1.3"
    },
    "devDependencies": {
        "@skypack/package-check": "^0.2.2",
        "chokidar": "^3.4.3",
        "eslint": "^7.16.0"
    },
    "gitHead": "ad422076cdb57d570426f786886129d5bca2f90f"
}
