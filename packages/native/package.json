{
    "name": "@okikio/native",
    "version": "0.0.7",
    "description": "A framework who's goal is to make it easier to create complex, performant, light-weight, web applications using native js apis.",
    "publishConfig": {
        "access": "public",
        "main": "lib/api.js",
        "types": "lib/api.d.ts",
        "browser": "lib/api.js",
        "node": "lib/api.node.js",
        "unpkg": "lib/api.js",
        "module": "lib/api.modern.js"
    },
    "main": "src/api.ts",
    "source": "src/api.ts",
    "directories": {
        "lib": "lib"
    },
    "files": [
        "lib",
        "src"
    ],
    "scripts": {
        "build": "node ./build",
        "watch": "node ./build --watch",
        "test": "jest --maxWorkers=1",
        "test:watch": "jest --maxWorkers=1 --watch --verbose false",
        "pre-release": "npm run build && ultra docs:build",
        "docs:build": "gulp build",
        "docs:watch": "gulp default --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/okikio/native.git"
    },
    "keywords": [
        "api",
        "js",
        "native",
        "framework",
        "web",
        "pjax"
    ],
    "author": {
        "name": "Okiki Ojo",
        "email": "hey@okikio.dev",
        "url": "https://okikio.dev"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/okikio/native/issues"
    },
    "homepage": "https://github.com/okikio/native#readme",
    "devDependencies": {
        "@rollup/plugin-typescript": "^6.1.0",
        "@types/jest": "^26.0.16",
        "browser-sync": "^2.26.13",
        "esbuild": "^0.8.20",
        "esbuild-jest": "^0.3.0",
        "eslint": "^7.15.0",
        "gulp": "^4.0.2",
        "gulp-postcss": "^8.0.0",
        "gulp-sass": "^4.1.0",
        "gulp-swig": "^0.9.1",
        "jest": "^26.6.3",
        "jest-chain": "^1.1.5",
        "merge-stream": "^2.0.0",
        "rollup": "^2.34.2",
        "rollup-plugin-typescript2": "^0.27.3",
        "ultra-runner": "^3.6.0"
    },
    "dependencies": {
        "@okikio/animate": "workspace:^0.0.7",
