{
    "name": "@okikio/native",
    "version": "1.0.1",
    "description": "A framework who's goal is to make it easier to create complex, light-weight, and performant web applications using modern js apis.",
    "publishConfig": {
        "access": "public",
        "main": "lib/api.js",
        "types": "lib/types/api.d.ts",
        "browser": "lib/api.js",
        "node": "lib/api.node.js",
        "unpkg": "lib/api.js",
        "module": "lib/api.modern.js",
        "exports": "lib/api.modern.js"
    },
    "main": "src/api.ts",
    "source": "src/api.ts",
    "directories": {
        "lib": "lib"
    },
    "files": [
        "lib",
        "src",
        "demo",
        "assets"
    ],
    "scripts": {
        "build": "node ./build",
        "watch": "node ./build --watch",
        "dts": "tsc --project dts.tsconfig.json",
        "pre-release": "npm run build && npm run dts && npm run demo:build",
        "demo:build": "gulp build",
        "demo:watch": "gulp default --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/okikio/native.git"
    },
    "keywords": [
        "api",
        "ts",
        "native",
        "modern",
        "framework",
        "web",
        "pjax"
    ],
    "author": {
        "name": "Okiki Ojo",
        "email": "hey@okikio.dev",
        "url": "https://okikio.dev"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/okikio/native/issues"
    },
    "homepage": "https://github.com/okikio/native/packages/native#readme",
    "dependencies": {
        "@okikio/animate": "workspace:*",
        "@okikio/emitter": "workspace:*",
        "@okikio/manager": "workspace:*",
        "esbuild": "^0.8.26",
        "gzip-size": "^6.0.0",
        "pretty-bytes": "^5.5.0",
        "typescript": "^4.1.3"
    },
    "devDependencies": {
        "browser-sync": "^2.26.13",
        "chokidar": "^3.4.3",
        "eslint": "^7.16.0",
        "gulp": "^4.0.2",
        "gulp-esbuild": "^0.3.9",
        "gulp-pug": "^4.0.1",
        "gulp-sass": "^4.1.0",
        "merge-stream": "^2.0.0",
        "standard-changelog": "^2.0.27",
        "ultra-runner": "^3.8.0"
    },
    "gitHead": "ad422076cdb57d570426f786886129d5bca2f90f"
}
