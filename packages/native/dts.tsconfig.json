{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2021",
        "module": "es2020",
        "sourceMap": false,
        "declaration": true,
        "declarationDir": "@types",
        "emitDeclarationOnly": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "./tests/**/*",
        "./@types/**/*",
        "./demo/**/*"
    ]
}