{
    "name": "root",
    "private": true,
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "ultra -r build",
        "watch": "ultra -r watch",
        "demo:build": "ultra -r demo:build",
        "demo:watch": "ultra -r demo:watch",
        "dts": "ultra -r dts",
        "test": "ultra -r test",
        "test:watch": "ultra -r test:watch",
        "pre-release": "ultra -r pre-release",
        "changesets": "changeset && changeset version",
        "changelog": "npm run pre-release && ultra -r standard-version",
        "release": "pnpm -r publish --tag latest"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS --verbose"
        }
    },
    "dependencies": {
        "pnpm": "^5.14.1",
        "ultra-runner": "^3.8.0"
    },
    "devDependencies": {
        "@changesets/cli": "^2.12.0",
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "commitizen": "^4.2.2",
        "husky": "^4.3.6"
    }
}
