{
    "name": "root",
    "private": true,
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "ultra -r build",
        "docs:build": "ultra -r docs:build",
        "docs:watch": "pnpm run --parallel -r docs:watch",
        "cy:run": "cypress run --browser edge",
        "cy:open": "cypress open",
        "test": "ultra -r test",
        "test:watch": "pnpm run --parallel -r test:watch",
        "prepublishOnly": "ultra -r pre-release",
        "release": "ultra prepublish && lerna version && pnpm -r publish --tag latest"
    },
    "devDependencies": {
        "@commitlint/cli": "^9.1.2",
        "@commitlint/config-conventional": "^9.1.2",
        "@rollup/plugin-node-resolve": "^8.4.0",
        "@types/jest": "^26.0.14",
        "browser-sync": "^2.26.12",
        "gulp": "^4.0.2",
        "husky": "^4.3.0",
        "jest": "^26.5.2",
        "jest-chain": "^1.1.5",
        "jest-environment-jsdom-global": "^2.0.4",
        "jest-watch-lerna-packages": "^1.1.0",
        "lerna": "^3.22.1",
        "merge-stream": "^2.0.0",
        "pnpm": "^5.8.0",
        "rollup": "^2.29.0",
        "rollup-plugin-esbuild": "^2.5.2",
        "ts-jest": "^26.4.1",
        "tslib": "^2.0.3",
        "typescript": "^4.0.3",
        "ultra-runner": "^3.5.0"
    }
}
