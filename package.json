{
    "name": "root",
    "private": true,
    "license": "MIT",
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "commit": "git cz",
        "typedoc": "del-cli docs/ && typedoc",
        "build": "pnpm -r build",
        "watch": "pnpm -r watch --parallel",
        "demo": "gulp default --watch",
        "demo-build": "gulp build",
        "dts": "ultra -r dts",
        "test": "ultra -r test",
        "test-dev": "ultra -r test-dev",
        "pre-release": "ultra -r pre-release && pnpm demo-build && pnpm typedoc",
        "changelog": "pnpm -r changelog && git push --follow-tags origin master",
        "release": "pnpm -r publish --tag latest"
    },
    "changelog": {
        "repo": "okikio/native",
        "labels": {
            "breaking": ":boom: Breaking Change",
            "enhancement": ":rocket: Enhancement",
            "bug": ":bug: Bug Fix",
            "documentation": ":memo: Documentation",
            "internal": ":house: Internal"
        },
        "cacheDir": ".changelog"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS --verbose"
        }
    },
    "dependencies": {
        "@okikio/native": "workspace:*"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.4",
        "@commitlint/config-conventional": "^12.1.4",
        "@csstools/postcss-sass": "^4.0.0",
        "@strictsoftware/typedoc-plugin-monorepo": "^0.4.2",
        "autoprefixer": "^10.2.6",
        "browser-sync": "^2.26.14",
        "chalk": "^4.1.1",
        "chokidar": "^3.5.1",
        "commitizen": "^4.2.4",
        "del": "^6.0.0",
        "del-cli": "^3.0.1",
        "esbuild": "^0.12.5",
        "flubber": "^0.4.2",
        "gulp": "^4.0.2",
        "gulp-esbuild": "^0.8.0",
        "gulp-plumber": "^1.2.1",
        "gulp-postcss": "^9.0.0",
        "gulp-pug": "^4.0.1",
        "gulp-rename": "^2.0.0",
        "gulp-size": "^4.0.0",
        "gulp-terser": "^2.0.1",
        "gulp-typescript": "^6.0.0-alpha.1",
        "gzip-size": "^6.0.0",
        "husky": "^6.0.0",
        "lerna-changelog": "^1.0.1",
        "path-to-regexp": "^6.2.0",
        "pnpm": "^6.6.1",
        "postcss": "^8.3.0",
        "postcss-csso": "^5.0.1",
        "postcss-scss": "^3.0.5",
        "pretty-bytes": "^5.6.0",
        "sass": "^1.34.0",
        "standard-version": "^9.3.0",
        "tailwindcss": "^2.1.2",
        "typedoc": "^0.20.36",
        "typescript": "~4.2.4",
        "ultra-runner": "^3.10.5"
    }
}