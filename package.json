{
    "name": "root",
    "private": true,
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "changeset": "changeset",
        "build": "ultra --parallel -r build",
        "watch": "ultra --parallel -r watch",
        "demo:build": "pnpm --parallel -r demo:build",
        "demo:watch": "ultra --parallel -r demo:watch",
        "dts": "ultra -r --parallel --filter \"packages/*\" dts",
        "test": "ultra -r test",
        "test:watch": "ultra --parallel -r test:watch",
        "pre-release": "ultra -r pre-release",
        "release": "npm run pre-release && changeset version && pnpm -r publish --tag latest"
    },
    "husky": {
        "hooks": {
            "commitmsg": "commitlint -e $GIT_PARAMS"
        }
    },
    "dependencies": {
        "@changesets/cli": "^2.12.0",
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "husky": "^4.3.6",
        "pnpm": "^5.13.7",
        "ultra-runner": "^3.7.1"
    }
}
