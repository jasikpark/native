{
    "name": "root",
    "private": true,
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "ultra --parallel -r build",
        "watch": "ultra --parallel -r watch",
        "demo:build": "pnpm --parallel -r demo:build",
        "demo:watch": "ultra --parallel -r demo:watch",
        "dts": "ultra -r --parallel --filter \"packages/*\" dts",
        "test": "ultra -r test",
        "test:watch": "ultra --parallel -r test:watch",
        "pre-release": "ultra -r pre-release",
        "changelog": "npm run pre-release && changeset && changeset version && ultra -r standard-changelog",
        "release": " pnpm -r publish --tag latest"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS --verbose"
        }
    },
    "dependencies": {
        "pnpm": "^5.14.1",
        "ultra-runner": "^3.8.0"
    },
    "devDependencies": {
        "standard-changelog": "^2.0.27",
        "@changesets/cli": "^2.12.0",
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "commitizen": "^4.2.2",
        "husky": "^4.3.6"
    }
}
