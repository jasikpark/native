{
    "name": "root",
    "private": true,
    "license": "MIT",
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "typedoc": "rm -r -f api/ && typedoc",
        "build": "rm -r -f packages/**/lib/ && node ./build",
        "watch": "gulp default --watch",
        "demo": "gulp default --watch",
        "demo-build": "gulp build",
        "dts": "ultra -r dts",
        "test": "ultra -r test",
        "test-dev": "ultra -r test-dev",
        "pre-release": "ultra -r pre-release && pnpm demo-build && pnpm typedoc",
        "changelog": "changeset version && git add -A && git commit -m 'chore(release): :rocket:'",
        "release": "pnpm -r publish --tag latest"
    },
    "dependencies": {
        "@okikio/animate": "workspace:*",
        "@okikio/emitter": "workspace:*",
        "@okikio/manager": "workspace:*",
        "@okikio/native": "workspace:*",
        "polymorph-js": "^1.0.2",
        "web-animations-js": "^2.3.2"
    },
    "devDependencies": {
        "@changesets/cli": "^2.16.0",
        "@csstools/postcss-sass": "^4.0.0",
        "@rollup/plugin-commonjs": "^19.0.2",
        "@rollup/plugin-node-resolve": "^13.0.4",
        "astro": "^0.18.5",
        "autoprefixer": "^10.3.1",
        "browser-sync": "^2.27.5",
        "chalk": "^4.1.2",
        "chokidar": "^3.5.2",
        "del": "^6.0.0",
        "esbuild": "^0.12.17",
        "globby": "^12.0.0",
        "gulp": "^4.0.2",
        "gulp-esbuild": "^0.8.4",
        "gulp-plumber": "^1.2.1",
        "gulp-postcss": "^9.0.0",
        "gulp-pug": "^5.0.0",
        "gulp-rename": "^2.0.0",
        "gulp-size": "^4.0.1",
        "gulp-terser": "^2.0.1",
        "gulp-typescript": "^6.0.0-alpha.1",
        "minimist": "^1.2.5",
        "pnpm": "^6.11.5",
        "postcss": "^8.3.6",
        "postcss-csso": "^5.0.1",
        "postcss-scss": "^4.0.0",
        "rollup": "^2.55.1",
        "rollup-plugin-bundle-size": "^1.0.3",
        "rollup-plugin-esbuild": "^4.5.0",
        "rollup-plugin-terser": "^7.0.2",
        "sass": "^1.36.0",
        "tailwindcss": "^2.2.7",
