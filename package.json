{
    "name": "root",
    "private": false,
    "license": "MIT",
    "publishConfig": {
      "registry": "http://localhost:4873"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "commitmsg": "commitlint -e $GIT_PARAMS",
        "build": "ultra --parallel -r build",
        "watch": "ultra --parallel -r watch",
        "demo:build": "pnpm --parallel -r demo:build",
        "demo:watch": "ultra --parallel -r demo:watch",
        "dts": "ultra -r --parallel --filter \"packages/*\" dts",
        "test": "ultra -r test",
        "test:watch": "ultra --parallel -r test:watch",
        "pre-release": "ultra -r pre-release",
        "release": "npm run pre-release && lerna version && lerna publish --tag latest"
    },
    "dependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@commitlint/config-lerna-scopes": "^11.0.0",
        "husky": "^4.3.6",
        "lerna": "^3.22.1",
        "pnpm": "^5.13.6",
        "ultra-runner": "^3.7.1"
    }
}
