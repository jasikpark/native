{
    "name": "root",
    "private": true,
    "license": "MIT",
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "typedoc": "rm -r -f api/ && typedoc",
        "build": "rm -r -f packages/**/lib/ && node ./build",
        "start": "astro dev",
        "docs": "astro build",
        "dts": "ultra -r dts",
        "test": "ultra -r test",
        "pre-release": "ultra -r pre-release && pnpm docs && pnpm typedoc",
        "changelog": "changeset version && git add -A && git commit -m 'chore(release): :rocket:'",
        "release": "pnpm -r publish --tag latest"
    },
    "dependencies": {
        "@okikio/animate": "workspace:*",
        "@okikio/emitter": "workspace:*",
        "@okikio/manager": "workspace:*",
        "@okikio/native": "workspace:*",
        "polymorph-js": "^1.0.2",
        "web-animations-js": "^2.3.2"
    },
    "devDependencies": {
        "@changesets/cli": "^2.16.0",
        "@rollup/plugin-commonjs": "^20.0.0",
        "@rollup/plugin-node-resolve": "^13.0.4",
        "astro": "^0.18.13",
        "chalk": "^4.1.2",
        "esbuild": "^0.12.20",
        "globby": "^12.0.1",
        "minimist": "^1.2.5",
        "pnpm": "^6.13.0",
        "rollup": "^2.56.2",
        "rollup-plugin-bundle-size": "^1.0.3",
        "rollup-plugin-esbuild": "^4.5.0",
        "rollup-plugin-terser": "^7.0.2",
        "sass": "^1.38.0",
        "tailwindcss": "^2.2.7",
        "typedoc": "0.21.5",
        "typescript": "~4.4.1-rc",
        "ultra-runner": "^3.10.5"
    }
}