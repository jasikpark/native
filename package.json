{
    "name": "root",
    "private": true,
    "license": "MIT",
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "commit": "git cz",
        "build": "pnpm -r build",
        "watch": "pnpm -r watch --parallel",
        "demo": "gulp default --watch",
        "demo-build": "gulp build",
        "dts": "ultra -r dts",
        "test": "ultra -r test",
        "test-dev": "ultra -r test-dev",
        "pre-release": "ultra -r pre-release && pnpm demo-build",
        "changelog": "pnpm -r changelog && lerna-changelog && git push --follow-tags origin master",
        "release": "pnpm -r publish --tag latest"
    },
    "changelog": {
        "repo": "okikio/native",
        "labels": {
            "breaking": ":boom: Breaking Change",
            "enhancement": ":rocket: Enhancement",
            "bug": ":bug: Bug Fix",
            "documentation": ":memo: Documentation",
            "internal": ":house: Internal"
        },
        "cacheDir": ".changelog"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS --verbose"
        }
    },
    "dependencies": {
        "@okikio/native": "workspace:*"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.1",
        "@commitlint/config-conventional": "^12.1.1",
        "@csstools/postcss-sass": "^4.0.0",
        "autoprefixer": "^10.2.5",
        "browser-sync": "^2.26.14",
        "chalk": "^4.1.1",
        "chokidar": "^3.5.1",
        "commitizen": "^4.2.3",
        "esbuild": "^0.11.13",
        "gulp": "^4.0.2",
        "gulp-esbuild": "^0.7.4",
        "gulp-plumber": "^1.2.1",
        "gulp-postcss": "^9.0.0",
        "gulp-pug": "^4.0.1",
        "gulp-rename": "^2.0.0",
        "gzip-size": "^6.0.0",
        "husky": "^6.0.0",
        "lerna-changelog": "^1.0.1",
        "pnpm": "^6.0.2",
        "postcss": "^8.2.12",
        "postcss-cli": "^8.3.1",
        "postcss-csso": "^5.0.1",
        "postcss-scss": "^3.0.5",
        "pretty-bytes": "^5.6.0",
        "sass": "^1.32.11",
        "standard-version": "^9.2.0",
        "tailwindcss": "^2.1.2",
        "ultra-runner": "^3.10.5"
    }
}