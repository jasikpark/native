{
    "name": "root",
    "private": true,
    "license": "MIT",
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "typedoc": "del-cli api/ && typedoc",
        "build": "pnpm -r build",
        "watch": "pnpm -r watch --parallel",
        "demo": "gulp default --watch",
        "demo-build": "gulp build",
        "dts": "ultra -r dts",
        "test": "ultra -r test",
        "test-dev": "ultra -r test-dev",
        "pre-release": "ultra -r pre-release && pnpm demo-build && pnpm typedoc",
        "changelog": "changeset version && git add -A && git commit -m 'chore(release): :rocket:'",
        "release": "pnpm -r publish --tag latest"
    },
    "dependencies": {
        "@okikio/animate": "workspace:*",
        "@okikio/emitter": "workspace:*",
        "@okikio/manager": "workspace:*",
        "@okikio/native": "workspace:*",
        "polymorph-js": "^1.0.2",
        "web-animations-js": "^2.3.2"
    },
    "devDependencies": {
        "@changesets/cli": "^2.16.0",
        "@csstools/postcss-sass": "^4.0.0",
        "astro": "^0.17.2",
        "autoprefixer": "^10.3.1",
        "browser-sync": "^2.27.4",
        "chalk": "^4.1.1",
        "chokidar": "^3.5.2",
        "del": "^6.0.0",
        "del-cli": "^4.0.1",
        "esbuild": "^0.12.15",
        "gulp": "^4.0.2",
        "gulp-esbuild": "^0.8.3",
        "gulp-plumber": "^1.2.1",
        "gulp-postcss": "^9.0.0",
        "gulp-pug": "^5.0.0",
        "gulp-rename": "^2.0.0",
        "gulp-size": "^4.0.1",
        "gulp-terser": "^2.0.1",
        "gulp-typescript": "^6.0.0-alpha.1",
        "gzip-size": "^6.0.0",
        "pnpm": "^6.10.2",
        "postcss": "^8.3.5",
        "postcss-csso": "^5.0.1",
        "postcss-scss": "^4.0.0",
        "pretty-bytes": "^5.6.0",
        "sass": "^1.35.2",
        "tailwindcss": "^2.2.4",
        "typedoc": "0.21.4",
        "typescript": "~4.4.0-beta",
        "ultra-runner": "^3.10.5"
    }
}