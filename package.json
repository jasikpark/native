{
    "name": "root",
    "private": true,
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "ultra -r build",
        "docs:build": "ultra -r docs:build",
        "docs:watch": "pnpm run --parallel -r docs:watch",
        "test": "ultra -r test",
        "test:watch": "pnpm run --parallel -r test:watch",
        "prepublishOnly": "ultra -r pre-release",
        "release": "ultra prepublish && lerna version && pnpm -r publish --tag latest"
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@types/jest": "^26.0.16",
        "browser-sync": "^2.26.13",
        "esbuild": "^0.8.20",
        "esbuild-jest": "^0.3.0",
        "gulp": "^4.0.2",
        "jest": "^26.6.3",
        "jest-chain": "^1.1.5",
        "lerna": "^3.22.1",
        "merge-stream": "^2.0.0",
        "pnpm": "^5.13.5",
        "ultra-runner": "^3.6.0"
    }
}
