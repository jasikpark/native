{
    "name": "root",
    "private": true,
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "ultra -r build",
        "watch": "ultra -r watch",
        "demo:build": "gulp build",
        "demo:watch": "gulp default --watch",
        "dts": "ultra -r dts",
        "test": "ultra -r test",
        "test:watch": "ultra -r test:watch",
        "pre-release": "ultra -r pre-release",
        "package-check": "ultra -r package-check",
        "changesets": "changeset && changeset version",
        "changelog": "pnpm run pre-release && pnpm run demo:build && ultra -r --concurrency 1 changelog && git push --follow-tags origin master",
        "release": "pnpm -r publish --tag latest"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS --verbose"
        }
    },
    "dependencies": {
        "@okikio/native": "workspace:*",
        "esbuild": "^0.8.27",
        "gzip-size": "^6.0.0",
        "pretty-bytes": "^5.5.0",
        "standard-version": "^9.1.0",
        "browser-sync": "^2.26.13",
        "gulp": "^4.0.2",
        "gulp-esbuild": "^0.3.10",
        "gulp-pug": "^4.0.1",
        "gulp-sass": "^4.1.0",
        "merge-stream": "^2.0.0",
        "pnpm": "^5.14.1",
        "ultra-runner": "^3.8.0"
    },
    "devDependencies": {
        "@changesets/cli": "^2.12.0",
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "commitizen": "^4.2.2",
        "husky": "^4.3.6"
    }
}
