{
    "name": "root",
    "private": true,
    "license": "MIT",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "ultra --parallel -r build",
        "watch": "ultra --parallel -r watch",
        "docs:build": "pnpm --parallel -r docs:build",
        "docs:watch": "ultra --parallel -r docs:watch",
        "dts": "ultra -r --parallel --filter \"packages/*\" dts",
        "test": "ultra -r test",
        "test:watch": "ultra --parallel -r test:watch",
        "pre-release": "ultra -r pre-release",
        "release": "npm run pre-release && lerna version && pnpm -r publish --tag latest"
    },
    "dependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "lerna": "^3.22.1",
        "pnpm": "^5.13.6",
        "ultra-runner": "^3.7.1"
    }
}
