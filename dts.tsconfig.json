{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "ES2020",
        "module": "ES2020",
        "sourceMap": false,
        "declaration": true,
        "incremental": true,
        "declarationDir": "lib/types",
        "emitDeclarationOnly": true,
        "isolatedModules": true,
        "esModuleInterop": true
    },
    "include": [
        "**/src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/tests/**/*"
    ]
}
